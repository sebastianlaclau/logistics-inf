{
    "name": "react",
    "version": "1.0.0",
    "description": "Web application to showcase how to integrate React, Node.js and Express. Full explanation and guide available on Medium.",
    "engines": {
        "node": "14.15.0"
    },
    "main": "app.js",
    "scripts": {
        "start": "node app",
        "server": "nodemon app",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "build": "cd client/ && npm install && npm run build"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.1.2",
        "base-64": "^1.0.0",
        "cors": "^2.8.5",
        "cross-fetch": "^3.1.4",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validator": "^6.10.0"
    },
    "devDependencies": {
        "concurrently": "^6.0.2"
    },
    "cacheDirectories": [
        "node_modules",
        "client/node_modules"
    ],
    "prettier": {
        "tabWidth": 4,
        "semi": false
    }
}
